<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_c"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/btn_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="点赞机会不足？"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/getZanTv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_grey_cor_5_zan"
            android:text="今日已免费领 +10"
            android:gravity="center"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="直接充值" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/pay50Tv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_grey_cor_5"
                android:gravity="center"
                android:text="50" />

            <TextView
                android:id="@+id/pay100Tv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_red_cor_border_5"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="100" />


            <TextView
                android:id="@+id/pay200Tv"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_grey_cor_5"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="200" />

        </LinearLayout>

        <TextView
            android:id="@+id/payTv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_red_cor_5_zan"
            android:text="确定充值"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>